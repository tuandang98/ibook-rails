<%= form_for(resource, as: resource_name, url: registration_path(resource_name),
  html: {class: "form-size transparent-white", multipart: true}) do |f| %>
  <h2><%= t("user.sign_up") %></h2>
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, class: "form-control", autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :nickname %><br />
    <%= f.text_field :nickname, class: "form-control", autocomplete: "off" %>
  </div>


  <div class="form-group">
    <%= f.label :avatar %><br />
    <%= f.file_field :avatar %>
    <%= f.hidden_field :avatar_cache %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <% end %><br />
    <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
    <small id="passwordHelp" class="form-text text-muted"><%= t("user.password_limit", length: @minimum_password_length)%></small>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off" %>
  </div>

  <%= devise_error_messages! %>

  <div class="actions">
    <%= f.submit t("user.sign_up"), class:"btn btn-success" %>
  </div>

<% end %>
<div class="devise-shared form-size transparent-white">
  <%= render "devise/shared/links" %>
</div>
