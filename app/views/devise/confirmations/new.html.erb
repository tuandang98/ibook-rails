<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class:"form-size transparent-white" }) do |f| %>
  <h2>Resend confirmation instructions</h2>
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, class: "form-control", autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
  </div>
  <%= devise_error_messages! %>
  <div class="actions">
    <%= f.submit "Resend", class:"btn btn-success" %>
  </div>
<% end %>

<div class="devise-shared form-size transparent-white">
  <%= render "devise/shared/links" %>
</div>
